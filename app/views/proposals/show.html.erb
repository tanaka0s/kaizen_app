<div class="comment_form">
<%= form_with model: [@proposal, @comment], local: true do |f|%>
  <div class="field">
    <%= f.label :content, "コメント" %><br/>
    <%= f.text_field :content, id:"comment_content" %>
  </div>
  <div class="comment_actions">
    <%= f.submit "送信する", class: :form__btn  %>
  </div>
<% end %>
</div>