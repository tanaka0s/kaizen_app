<div class="new_main_execution" >
  <div class="new_execution">
    <div class="new_execution_detail">
      <div class="new_before_content">
        <div class="top_before_character">Before</div>
        <div class="new_before_proposal">
          <div class="new_before_image">
          <%= image_tag @execution.proposal.image, class:"image_tag" %>
          </div>
          <div class="new_before_text">
            <div class="text">
            <span>Where</span><br>
            <%= @execution.proposal.where %>
            </div>
            <div class="text">
            <span>What</span><br>
            <%= @execution.proposal.what %>
            </div>
            <div class="text">
            <span>Why</span><br>
            <%= @execution.proposal.why %>
            </div>
            <div class="text">
            <span>How</span><br>
            <%= @execution.proposal.how %>
            </div>
          </div>
        </div>
      </div>
      <div class="new_after_content">
        <%= form_with model: @execution, url: execution_path, local: true, class:"new_form" do |f| %>
        <%= render "proposals/error_messages", model: @execution %>
       <div class="top_after_character">After</div>
       <div class="new_field">
        <%= f.label :image, "改善後の写真" %>
        <%= f.file_field :image %>
        </div>
        <div class="new_field">
        <%= f.label :where, "Where" %>
        <%= f.text_area :where, class:"new_text", placeholder:"どこを改善しましたか？", maxlength:"500" %>
        </div>
        <div class="new_field">
        <%= f.label :what, "What" %>
        <%= f.text_area :what, class:"new_text", placeholder:"何をしましたか？", maxlength:"500" %>
        </div>
        <div class="new_field">
        <%= f.label :why, "Why" %>
        <%= f.text_area :why, class:"new_text", placeholder:"なぜ改善しようと思いまいしたか？", maxlength:"500" %>
        </div>
        <div class="new_field">
        <%= f.label :how, "How" %>
        <%= f.text_area :how, class:"new_text", placeholder:"どのように改善しましたか？", maxlength:"500" %>
        </div>
      </div>
    </div>
    <div class="new_execution_calc" >
      <div class="new_before_calc" >
        <div class="bottom_before_character">Before</div>
        <div class="new_before_calc_detail">
          <span>作業時間</span>
          <div class="numeric", id="show_before_seconds"><%= @execution.proposal.before_seconds %></div>
          <span>s</span>
          <span>x</span>
          <span>作業人数</span>
          <div class="numeric", id="show_before_workers"><%= @execution.proposal.before_workers %></div>
          <span>人</span>
          <span>x</span>
          <span>年間日数</span>
          <div class="numeric", id="show_before_days"><%= @execution.proposal.before_days %></div>
          <span>日</span>
          <span>=</span>
          <span>年間工数</span>
          <div class="numeric", id="show_before_man_hours"><%= @execution.proposal.before_man_hours %></div>
          <span>h</span>
          <span>x</span>
          <span>時給</span>
          <div class="numeric", id="show_hourly_wage"><%= @execution.proposal.hourly_wage %></div>
          <span>円</span>
          <span>=</span>
          <span>年間コスト</span>
          <div class="numeric", id="show_before_costs"><%= @execution.proposal.before_costs %></div>
          <span>円</span>
        </div>
      </div>
      <div class="arrow">⬇</div>
      <div class="new_after_calc">
        <div class="bottom_after_character">After</div>
        <div class="new_after_calc_detail">
          <span>作業時間</span>
          <%= f.number_field :after_seconds, class:"numeric_input", id:"after_seconds", placeholder:"秒単位で入力" %>
          <span>s</span>
          <span>x</span>
          <span>作業人数</span>
          <%= f.number_field :after_workers, class:"numeric_input", id:"after_workers", placeholder:"1日の使用人数" %>
          <span>人</span>
          <span>x</span>
          <span>年間日数</span>
          <%= f.number_field :after_days, class:"numeric_input", id:"after_days", placeholder:"年間使用日数" %>
          <span>日</span>
          <span>=</span>
          <span>年間工数</span>
          <div id="show_after_man_hours"></div>
          <span>h</span>
          <%= f.hidden_field :after_man_hours, class:"numeric_input", id:"after_man_hours"%>
          <span>x</span>
          <span>時給</span>
          <div id="show_hourly_wage"><%= @execution.proposal.hourly_wage %></div>
          <span>円</span>
          <%= f.hidden_field :hourly_wage, class:"numeric_input", id:"hourly_wage" %>
          <span>=</span>
          <span>年間コスト</span>
          <div id="show_after_costs"></div>
          <span>円</span>
          <%= f.hidden_field :after_costs, class:"numeric_input", id:"after_costs" %>
        </div>
      </div>
      <div class="arrow">⬇</div>
      <div class="new_calc_result">
        <div class="new_reduced_man_hours">
          <span>年間削減工数</span>
          <div id="show_reduced_man_hours"></div>
          <span>h</span>
          <%= f.hidden_field :reduced_man_hours, class:"numeric_input", id:"reduced_man_hours" %>
        </div>
        <div class="new_reduced_costs">
          <span>年間削減コスト</span>
          <div id="show_reduced_costs"></div>
          <span>円</span>
          <%= f.hidden_field :reduced_costs, class:"numeric_input", id:"reduced_costs" %>
          </div>
        </div>
      <div class="actions">
        <%= f.submit "投稿する", id:"submit" %>
      </div>
      <% end %>
    </div>
  </div>
</div>